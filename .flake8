[flake8]
max-line-length = 127
max-complexity = 10
extend-ignore =
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by black)
    E501
exclude =
    .git,
    __pycache__,
    venv,
    test_venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    migrations
per-file-ignores =
    # Ignore specific rules in test files
    tests/*: F401, F811
    # Ignore import rules in __init__.py files
    */__init__.py: F401
